<% @messages.each do |message| %>
  <div class="message">
    <h3><%= message.title %> <small>(by: <%= message.author %>)</small></h3>
    <h3><a href="/messages/<%= message.id %>"><%= message.title %> </a><small>(by: <%= message.author %>)</small></h3>
    <p>
      <%= message.content %>
    </p>
    <p>
      <%= message.url %>
    </p>
    <p>
      Created at= <%= message.created_at %>
    </p>
  </div>
<% end %>

